<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "../bulletml.dtd">

<bulletml type="vertical" xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

<action label="top">
    <repeat><times>20</times><action>
    <fire>
	<bulletRef label="enemy1"/>
    </fire>
    <wait>30</wait>
    </action></repeat>
    <vanish />
</action>

<bullet label="enemy1" group="monster2" sprite="jelly" simpleGroup="shot" simpleSprite="shot">
	<hitbox shape="circle" radius="28" x="-28" y ="-28"/>
	<simpleHitbox shape="circle" radius="6" x="-6" y="-6"/>
	<direction type="absolute">120</direction>
	<genericint score="5"/>
	<life value="2" />
  <genericstr grabbullet="playerSimple" />
	<speed>100</speed>
	<action>
		<wait>20</wait>
		<repeat><times>6</times><action>
			<repeat><times>$rand * 5 / 4</times><action>
				<fire>
					<direction type="aim">0</direction>
					<speed>400</speed>
					<bullet />
				</fire>
			</action></repeat>
			<wait>30</wait>
		</action></repeat>
		<changeDirection>
			<direction type="absolute">45</direction>
			<term>1</term>
		</changeDirection>
		<repeat><times>8</times><action>
			<wait>30</wait>
			<repeat><times>$rand * 5 / 4</times><action>
				<fire>
					<direction type="aim">0</direction>
					<speed>400</speed>
					<bullet />
				</fire>
			</action></repeat>
		</action></repeat>
	</action>
</bullet>

</bulletml>
