<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "../bulletml.dtd">

<bulletml type="vertical"
          xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

<action label="top">
    <fire>
      <bulletRef label="enemy"/>
    </fire>
    <vanish />
</action>

<bullet label="enemy" simpleGroup="walls" simpleSprite="squareWall">
	<simpleHitbox shape="rectangle" x="-110" y="-110" width="220" height="220" />
	<action>
		<fire>
			<bullet/>
		</fire>
	<vanish />
	</action>
</bullet>

</bulletml>
